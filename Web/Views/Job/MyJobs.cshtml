@using FreelancePlatform.Domain.Enums
@using FreelancePlatform.Web.ViewModels
@* @using FreelancePlatform.Web.Helpers *@
@using Microsoft.AspNetCore.Identity
@model List<JobViewModel>

@{
    ViewData["Title"] = "My Posted Jobs";
}

@* <div class="container mt-4">
    <h2>@ViewData["Title"]</h2>*@
    
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Budget</th>
                    <th>Deadline</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var job in Model)
                {
                    <tr>
                        <td>@job.Title</td>
                        
                        <td>@job.Budget.ToString("C")</td>
                        <td>@job.Deadline.ToString("d")</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(JobStatus status)
    {
        return status switch
        {
            JobStatus.Open => "badge-success",
            JobStatus.InProgress => "badge-primary",
            JobStatus.Completed => "badge-secondary",
            _ => "badge-light"
        };
    }
}