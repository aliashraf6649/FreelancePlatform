@using FreelancePlatform.Web.ViewModels
@using FreelancePlatform.Domain.Enums
@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2>@ViewData["Title"]</h2>
        
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
        }
        
        <form asp-action="Profile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" readonly />
            </div>
            
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
            
            <div class="form-group">
                <label asp-for="UserType"></label>
                <input asp-for="UserType" class="form-control" readonly />
            </div>
            
            <div class="form-group">
                <label asp-for="Bio"></label>
                <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            
            @if (Model.UserType == UserType.Freelancer)
            {
                <div class="form-group">
                    <label asp-for="Skills"></label>
                    <input asp-for="Skills" class="form-control" />
                    <small class="form-text text-muted">List your skills separated by commas</small>
                    <span asp-validation-for="Skills" class="text-danger"></span>
                </div>
            }
            
            <button type="submit" class="btn btn-primary">Update Profile</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}